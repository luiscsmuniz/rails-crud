<div class="col-md-6 col-md-offset-3">
	<p id="notice"><%= notice %></p>

	<p>
	  <strong><%=Coin.human_attribute_name(:description)%>:</strong>
	  <%= @coin.description %>
	</p>

	<p>
	  <strong><%=Coin.human_attribute_name(:acronym)%>:</strong>
	  <%= @coin.acronym %>
	</p>

	<p>
	  <strong><%=Coin.human_attribute_name(:mining_type)%>:</strong>
	  <%= @coin.mining_type.acronym %> - <%= @coin.mining_type.description %>
	</p>

	  <strong><%=Coin.human_attribute_name(:url_image)%>:</strong>
	<p>
	  <%= image_tag @coin.url_image, size: '50x50', class: 'image-responsive' %>
	</p>
	<%= link_to t('links.edit'), edit_coin_path(@coin) %> |
	<%= link_to t('links.back'), coins_path %>
</div>
