<div class="col-md-12">
  <p id="notice"><%= notice %></p>

  <h1>Cripto Moedas</h1>
  <h3><small> <%=cookies[:curso]%></small></small></h3>

  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th><%=@coins.human_attribute_name(:description)%></th>
          <th><%=@coins.human_attribute_name(:acronym)%></th></th>
          <th><%=@coins.human_attribute_name(:mining_type)%><th><%=@coins.human_attribute_name(:url_image)%>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @coins.each do |coin| %>
          <tr ondblclick="location.href = '<%= coin_path(coin.id) %>'">
            <td><%= coin.description %></td>
            <td><%= coin.acronym %></td>
            <td><%= coin.mining_type.acronym %></td>
            <td><%= image_tag coin.url_image, size:'25x25' %></td>
            <td><%= link_to t('links.show'), coin %></td>
            <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
            <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>

  <%= link_to t('links.new'), new_coin_path %>
</div>
