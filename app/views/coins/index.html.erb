<div class="col-md-12">
  <p id="notice"><%= notice %></p>

  <h1>Cripto Moedas</h1>

  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Sigla</th>
          <th>Tipo de Mineração</th>
          <th>Imagem</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @coins.each do |coin| %>
          <tr ondblclick="location.href = '<%= coin_path(coin.id) %>'">
            <td><%= coin.description %></td>
            <td><%= coin.acronym %></td>
            <td><%= coin.mining_type.acronym %></td>
            <td><%= image_tag coin.url_image, size:'25x25' %></td>
            <td><%= link_to 'Mostrar', coin %></td>
            <td><%= link_to 'Editar', edit_coin_path(coin) %></td>
            <td><%= link_to 'Excluir', coin, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>

  <%= link_to 'Novo', new_coin_path %>
</div>
